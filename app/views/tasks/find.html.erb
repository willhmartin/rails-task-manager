<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p>Completed: <%= @task.completed %></p>

<%= link_to "Home", tasks_path, :class => "btn btn-primary" %>

<%= link_to "Edit", edit_task_path, :class => "btn btn-primary" %>
<%= link_to 'delete',
  delete_task_path(@task), :class => "btn btn-primary",
  data: { confirm: 'Are you sure?' },
  method: :delete %>

